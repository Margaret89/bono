block model
	.site-shadow

	.modal-main
		.modal-main__close
			.btn-circle.btn-circle_grey
				+svg('ic-close','ic-close', '10', '10')

		.modal-main__title Create Task
		
		.modal-main__content
			form.form-site
				.form-site__content
					.form-site__item
						input(type="text", name="title", placeholder="Title")

					.form-site__item
						.form-site__label Description
						textarea(placeholder="Add description of task", style="height: 104px;")

					.form-site__item
						.form-site__label Segment
						.select
							.select__field.active Call
								.select__arr
									+svg('ic-arrow-down','ic-arrow-down', '11', '6')

							.select__popup
								-
									var list=[
										{text:'Parameter 1'},
										{text:'Parameter 2'},
									]
								each item in list
									.select__item
										.select__icon
											+svg('ic-call','ic-call', '16', '16')
										.select__text= item.text

					.form-site__item
						.form-site__label Reminder

						.tabs-page
							ul.tabs-page__list
								li.tabs-page__item.active(data-item='tab1')
									+svg('ic-clock','ic-clock', '18', '18')

								li.tabs-page__item.active(data-item='tab2')
									+svg('ic-flag','ic-flag', '14', '20')

								li.tabs-page__item.active(data-item='tab3')
									+svg('ic-map','ic-map', '17', '20')

								li.tabs-page__item.active(data-item='tab4')
									+svg('ic-photo','ic-photo', '18', '18')

					.form-site__item
						.form-site__label Date & Time

						.form-site__list
							label.input-date
								input(type="date", value="2 December", disabled="disabled")

								.input-date__field Today
									.input-date__icon
										+svg('ic-calendar','ic-calendar', '16', '18')
										
							.input-time
								input(type="time", disabled="disabled", value="10:15")
								.input-time__icon
									+svg('ic-clock','ic-clock', '15', '15')

					.form-site__item.form-site__item_sb(style="margin-top:-10px;")
						.switch
							input(type="checkbox", id="switch1", checked="checked")
							label.switch__content(for="switch1")
								.switch__marker

							.switch__text Remind me

						.time-label
							+svg('ic-clock','ic-clock', '13', '13')
							|In 15 minutes

					.form-site__item
						.form-site__label Location
						input(type="text", placeholder="Add location")

					.form-site__item(style="margin-top:-10px;")
						.switch
							input(type="checkbox", id="switch2", checked="checked")
							label.switch__content(for="switch2")
								.switch__marker

							.switch__text Remind me a location


					.form-site-add(style="margin:0")
						.form-site-add__label Remind me when

						.form-site-add__item
							.select
								.select__field.active Chat with
									.select__arr
										+svg('ic-arrow-down','ic-arrow-down', '11', '6')

								.select__popup
									-
										var list=[
											{text:'Parameter 1'},
											{text:'Parameter 2'},
										]
									each item in list
										.select__item
											.select__icon
												+svg('ic-call','ic-call', '16', '16')
											.select__text= item.text
											
						.form-site-add__item
							input(type="text", placeholder="Add the user")
							.btn-circle.btn-circle_grey
								+svg('ic-plus','ic-plus', '10', '10')

						.file-upload
							label.file-upload__content
								input(type='file', name='file')

								span.file-upload__icon
									+svg('ic-spiral','ic-spiral', '17', '17')
								span.file-upload__text Attach file

				.form-site__btn
					button.btn
						|Create