							var list=[
								{text:'To Do', color:'red', status:'active'},
								{text:'In Progress', color:'yellow', status:'active'},
								{text:'Delayed / Blocked', color:'purple', status:'active'},
								{text:'Done', status:'active'},
								
							]
						each item in list
							.btn.btn_middle
								+svg('ic-plus','ic-plus', '10', '10')
								|Add Columns

							.select-check__item
								.select-check__item-content
									label.input-check
										if(item.status=='active')
											input(type='checkbox', checked="checked")
										else
											input(type='checkbox')
										span.input-check__mark
											+svg('ic-tick','ic-tick', '8', '6')
										span.input-check__circle(class=item.color?'input-check__circle_'+item.color:'')
										span.input-check__text= item.text

								.select-check__edit
									+svg('ic-edit','ic-edit', '14', '14')

