extends ../layout/main

block variables
	- var title = 'Create company';
	- 
		var pagelist = [
			{href: 'create-company.html',name:'Create company'},
			{href: 'tipografika.html',name:'Typography'},
		];

block content
	section.create-company
		.create-company__content
			.create-company__title Create your first campaign

			.steps
				.steps__item.active
					span.steps__num 1
				.steps__item.active
					span.steps__num 2
				.steps__item.active.current
					span.steps__num 3
				.steps__item
					span.steps__num 4
				.steps__item
					span.steps__num 5
				.steps__item
					span.steps__num 6

			form.form-site
				.form-site__content
					.form-site__item
						.choose-input
							.choose-input__field
								input(type="text", name="people", placeholder="Add tags")
								.choose-input__btn
									+svg('ic-plus','ic-plus', '10', '10')

							.choose-input__popup
								-
									var list=[
										{name:'Sam Smith', mail:'samsmith@gmail.com'},
										{name:'Santa Kozackyh', mail:'santakoz@gmail.com'},
									]
								each item in list
									.choose-input__item
										.choose-input__img(style="background-image: url(assets/img/woman.png)")
										.choose-input__info
											.choose-input__name= item.name
											.choose-input__mail= item.mail

				.form-site__btn.form-site__btn_sb
					button.btn.btn_opacity
						+svg('ic-arr-left','ic-arr-left', '10', '8')
						|Back

					button.btn
						|Skip
						+svg('ic-arr-right','ic-arr-right', '10', '8')
		