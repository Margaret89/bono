								},
								{
									title: 'UTM',
									items:[
										{text:'Active'},
										{text:'Waiting'},
									]
								},
							]
						each sect in list
							.filter__sect
								.filter__title= sect.title

								each item in sect.items
									.filter__item
										label.input-check
											if(item.status=='active')
												input(type='checkbox', checked="checked")
											else
												input(type='checkbox')
											span.input-check__mark
												+svg('ic-tick','ic-tick', '8', '6')
											span.input-check__text= item.text

					.filter__bottom
						span.btn.btn_border
							+svg('ic-clear','ic-clear', '19', '19')
