			.page-top__text The list contains 200 users

		.page-top__col
			form.form-search
				input(type="text", name="search", placeholder="Search")
				button.form-search__btn(type="submit")
					+svg('ic-search','ic-search', '15', '15')

			.filter.filter_right
				.filter__btn
					+svg('ic-filter','ic-filter', '18', '16')
					.filter__arr
						+svg('ic-arrow-down','ic-arrow-down', '11', '6')

				.filter__popup
					.filter__list
						-
							var list=[
								{
									title: 'Source',
									items:[
										{text:'Google.offcial', status:'active'},
										{text:'Google.fb'},
										{text:'Google.ig'},
										{text:'Google.tt'},
									]
								},
								{
									title: 'Status',
									items:[
										{text:'Active', status:'active'},
										{text:'Waiting'},
										{text:'Pause'},
										{text:'Decline'},
									]
								},
								{
									title: 'Meeting',
									items:[
										{text:'Google.offcial', status:'active'},
										{text:'Google.fb'},
									]
								},
								{
									title: 'UTM',
									items:[
										{text:'Active'},
										{text:'Waiting'},
									]
								},
							]
						each sect in list
							.filter__sect
								.filter__title= sect.title

								each item in sect.items
									.filter__item
										label.input-check
											if(item.status=='active')
												input(type='checkbox', checked="checked")
											else
												input(type='checkbox')
											span.input-check__mark
												+svg('ic-tick','ic-tick', '8', '6')
											span.input-check__text= item.text

					.filter__bottom
						span.btn.btn_border
							+svg('ic-clear','ic-clear', '19', '19')
							|Clear All

						span.btn.btn_border
							|Apply
							+svg('ic-arrow-right','ic-arrow-right', '6', '11')


			.btn-circle.btn-circle_big
				+svg('ic-plus','ic-plus', '12', '12')

