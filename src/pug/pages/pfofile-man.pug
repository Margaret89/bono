extends ../layout/main

block variables
	- var title = 'Profile';
	- var main_color = 'grey';

block content
	section.profile-card-wrap
		.profile-card-wrap__content
			span.btn.btn_white-fill.btn_middle
				+svg('ic-arr-left','ic-arr-left', '10', '8')
				|Back

			.profile-card.profile-card_red
				.profile-card__top
					.profile-card__img(style="background-image: url(assets/img/man-ava.png)")

					span.btn-circle.btn-circle_grey
						+svg('ic-edit','ic-edit', '12', '12')

				.profile-card__content
					.profile-card__main
						.profile-card__head
							.profile-card__title Adam Luis
							.profile-card__tag.profile-card__tag_red Affiliator

						.profile-card-city
							.profile-card-city__flag
								img(src="assets/img/israel-flag.jpg", alt="")
							.profile-card-city__text Tel Aviv, Israel

						span.btn.btn_border-dark
							+svg('ic-chat','ic-chat', '15', '15')
							|Message

					.profile-card-info
						.profile-card-info__col
							.profile-card-info__title Info

							.profile-card-info__item
								.profile-card-info__label Phone
								.profile-card-info__val +1 806 1239 3284

							.profile-card-info__item
								.profile-card-info__label Email
								.profile-card-info__val schuppe.jany@hotmail.com
								
							.profile-card-info__item
								.profile-card-info__label Languages
								.profile-card-info__val English, Hebrew

						.profile-card-info__col
							.profile-card-info__title About

							.profile-card-info__desc Many desktop publishing packages and web page editors now use Lorem Ipsum as their default model text, and search for 'loremipsum'will uncover many web sites still in their infancy um as their.