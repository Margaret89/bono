extends ../layout/main

block variables
	- var title = 'Create company';
	- 
		var pagelist = [
			{href: 'create-company.html',name:'Create company'},
			{href: 'tipografika.html',name:'Typography'},
		];

block content
	section.create-company
		.create-company__content
			.create-company__title Create your first campaign

			.steps
				.steps__item.active.current
					span.steps__num 1
				.steps__item
					span.steps__num 2
				.steps__item
					span.steps__num 3
				.steps__item
					span.steps__num 4
				.steps__item
					span.steps__num 5
				.steps__item
					span.steps__num 6

			form.form-site
				.form-site__content
					.form-site__item
						input(type="text", name="name", placeholder="Camping name", value="ZARA")

				.form-site__btn
					button.btn
						|Next
						+svg('ic-arr-right','ic-arr-right', '10', '8')
		